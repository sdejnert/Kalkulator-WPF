<Window x:Class="Kalkulator.Measure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d"
        Title="Measure" Height="400" Width="400">
    <Grid>
        <ComboBox x:Name="ComboBox_1" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
        <ComboBox x:Name="ComboBox_2" HorizontalAlignment="Left" Margin="262,75,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="1"/>
        <TextBox x:Name="TextBox_1" HorizontalAlignment="Left" Height="23" Margin="10,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox" />
        <TextBox x:Name="TextBox_2" HorizontalAlignment="Left" Height="23" Margin="262,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox" IsEnabled="False" />
        <Button x:Name="ButtonCount" Content="Count" HorizontalAlignment="Left" Margin="161,147,0,0" VerticalAlignment="Top" Width="80" Click="ButtonCount_Click"/>
    </Grid>
</Window>
