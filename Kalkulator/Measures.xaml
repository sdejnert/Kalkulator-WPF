<Page x:Class="Kalkulator.Measures"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kalkulator"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Measures">

    <Grid>
        <ComboBox x:Name="ComboBox_1" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="ComboBox_2" HorizontalAlignment="Left" Margin="170,75,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBox_1" HorizontalAlignment="Left" Height="23" Margin="10,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox" />
        <TextBox x:Name="TextBox_2" HorizontalAlignment="Left" Height="23" Margin="170,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox" IsEnabled="False" />
        <Button x:Name="ButtonCount" Content="Count" HorizontalAlignment="Left" Margin="115,155,0,0" VerticalAlignment="Top" Width="80" Click="ButtonCount_Click"/>
    </Grid>
</Page>
